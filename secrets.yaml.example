# mdsync secrets configuration
# Copy this file to secrets.yaml and fill in your credentials
# secrets.yaml is excluded from git for security

confluence:
  url: "https://yoursite.atlassian.net"
  username: "your-email@domain.com"
  api_token: "your-confluence-api-token"
  
  # Optional: Default permissions for page locking
  # When --lock-confluence is used, these users/groups can edit
  permissions:
    allowed_editors:
      users:
        - "your-email@domain.com"
      groups:
        - "security-team"
        - "confluence-administrators"

# Google Docs credentials are stored separately in credentials.json
# This file is for Confluence and future integrations
